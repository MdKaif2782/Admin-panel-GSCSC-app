<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Invite">
    <com.google.android.material.progressindicator.CircularProgressIndicator
            android:visibility="gone"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:indicatorColor="@color/black"
            app:indicatorInset="2dp"
            app:indicatorSize="50dp"
android:id="@+id/progress_indicator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/email_input" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.812"/>
    <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serial Number: xxxxx"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:id="@+id/serial_number"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.79" app:layout_constraintBottom_toTopOf="@+id/email_input"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:id="@+id/email_input"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.514" app:layout_constraintVertical_bias="0.552"/>
    <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Invite"
            android:id="@+id/submit_invite"
            android:layout_marginHorizontal="100dp"
            android:onClick="onInviteButtonPressed"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.514" app:layout_constraintVertical_bias="0.752"/>
</androidx.constraintlayout.widget.ConstraintLayout>